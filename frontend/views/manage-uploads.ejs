<!doctype html>
<html lang="en">
<head>
    <title>Manage Uploads</title>
    <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/manage-uploads.css">
</head>
<body>
<%- include("partials/navbar") %>
<div class="main-content">
    <%- include("partials/navbar2") %>

    <div class="my-uploads-section">
        <h1>My Uploads</h1>
        <div class="uploads-container">
            <%
            let myUploads = [
                { name: 'My Awesome Comic', cover: '/assets/chapter-placeholder.png' },
                { name: 'The Adventures of AI', cover: '/assets/chapter-placeholder.png' },
                { name: 'Chronicles of Code', cover: '/assets/chapter-placeholder.png' },
                { name: 'The Bug Squasher', cover: '/assets/chapter-placeholder.png' },
                { name: 'The Final Commit', cover: '/assets/chapter-placeholder.png' },
            ];
            %>
            <% for(let comic of myUploads) { %>
                <div class="comic-thumbnail">
                    <img src="<%= comic.cover %>" alt="<%= comic.name %>">
                    <div class="comic-title-overlay">
                        <span><%= comic.name %></span>
                    </div>
                </div>
            <% } %>
        </div>
        <button class="new-comic-btn" id="openModal">+ New Comic</button>
    </div>

    <%- include("partials/new-comic-modal.ejs") %>
</div>

<script>
    const openBtn = document.getElementById("openModal");
    const closeBtn = document.getElementById("closeModal");
    const modal = document.getElementById("modal");

    openBtn.addEventListener("click", function() {
        modal.classList.add("open");
    })

    closeBtn.addEventListener("click", function() {
        modal.classList.remove("open");
    })
</script>

<%- include("partials/scripts") %>


</body>
</html>